@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* NAVBAR */
        .navbar-custom {
            background-color: #111 !important;
        }

            .navbar-custom .navbar-brand {
                color: #fff !important;
                font-size: 30px !important;
                font-weight: 900;
                letter-spacing: 1px;
            }

            .navbar-custom .nav-link {
                color: #fff !important;
                font-size: 16px;
            }

        /* FOOTER */
        .footer-modern {
            background: #111;
            color: #ccc;
            padding: 50px 0;
            width: 100%;
        }

            .footer-modern h5 {
                color: #fff;
                margin-bottom: 15px;
                font-size: 26px !important;
                font-weight: 900;
                letter-spacing: 1px;
            }

            .footer-modern a {
                color: #bbb;
                text-decoration: none;
                font-size: 16px;
            }

                .footer-modern a:hover {
                    color: #fff;
                }

        .social-icons a {
            margin-right: 12px;
            font-size: 26px;
            color: #bbb;
        }

            .social-icons a:hover {
                color: #fff;
            }

        .linkedin-text {
            font-size: 16px;
            color: #ccc;
            margin-left: 8px;
        }

            .linkedin-text:hover {
                color: #fff;
                text-decoration: underline;
            }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-sm navbar-custom shadow-sm sticky-top">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bookify</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarItems">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarItems">

                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Customer/Room">Rooms</a></li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var email = user?.Email ?? "";

                        @if (email == "hemasheta061@gmail.com")   // ADMIN CHECK
                        {
                            <!-- Admin Links -->
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" href="/Admin/RoomType">Room Types</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" href="/Admin/Room">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" href="/Admin/Booking">Bookings</a>
                            </li>

                            <!-- Admin Dropdown -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center"
                                   href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">

                                    <i class="bi bi-person-badge-fill me-1"></i>
                                    Admin, @email
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                            <input type="hidden" name="returnUrl" value="/" />
                                            <button class="dropdown-item text-danger">Logout</button>
                                        </form>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- CUSTOMER CART ICON -->
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative" href="/Customer/Cart">
                                    <i class="bi bi-cart3" style="font-size:20px; color:white;"></i>
                                    <span id="cartCountBadge"
                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="font-size:10px;">0</span>
                                </a>
                            </li>

                            <!-- CUSTOMER PROFILE DROPDOWN -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center"
                                   href="#" id="profileDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @email
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li><a class="dropdown-item" href="/Customer/Profile">My Profile</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                            <input type="hidden" name="returnUrl" value="/" />
                                            <button class="dropdown-item text-danger">Logout</button>
                                        </form>

                                    </li>
                                </ul>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-success btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer id="siteFooter" class="footer-modern">
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <h5>Bookify</h5>
                    <p>Your trusted hotel booking partner for a luxurious and comfortable stay.</p>
                </div>

                <div class="col-md-4">
                    <h5>Contact</h5>
                    <p>Email: <strong>hemasheta061@gmail.com</strong></p>
                    <p>Phone: <strong>+201128067848</strong></p>
                    <p>Address: <strong>Mansoura, Egypt</strong></p>
                </div>

                <div class="col-md-4">
                    <h5>Social</h5>
                    <div class="social-icons mt-2 d-flex align-items-center">
                        <a href="https://www.linkedin.com/in/ibrahim-sheta" target="_blank">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/ibrahim-sheta" target="_blank" class="linkedin-text">
                            Ibrahim Sheta
                        </a>
                    </div>
                </div>

            </div>

            <hr style="border-color:#333;" />
            <p class="text-center">© 2025 Bookify. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 🔥 AUTO CART BADGE REFRESH -->
    <script>
        (function () {
            const badge = document.getElementById("cartCountBadge");
            if (!badge) return;

            fetch('/Customer/Cart/Count')
                .then(r => r.json())
                .then(j => {
                    if (j.count !== undefined) {
                        badge.innerText = j.count;
                    }
                })
                .catch(_ => {});
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
