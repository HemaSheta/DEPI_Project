@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Navbar is always dark */
        .navbar-custom {
            background-color: #111 !important;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #fff !important;
            }

        /* MODERN FOOTER */
        .footer-modern {
            background: #111;
            color: #ccc;
            padding: 40px 0;
        }

            .footer-modern h5 {
                color: #fff;
                margin-bottom: 15px;
            }

            .footer-modern a {
                color: #bbb;
                text-decoration: none;
            }

                .footer-modern a:hover {
                    color: #fff;
                }

        .social-icons a {
            margin-right: 12px;
            font-size: 22px;
            color: #bbb;
        }

            .social-icons a:hover {
                color: #fff;
            }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-custom shadow-sm">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bookify</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarItems">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarItems">

                    <!-- LEFT -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Customer/Room">Rooms</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    </ul>

                    <!-- RIGHT -->
                    <ul class="navbar-nav ms-auto">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var u = await UserManager.GetUserAsync(User);
                            var email = u?.Email ?? "";

                            <!-- Admin -->
                            if (email == "hemasheta061@gmail.com")
                            {
                                <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Admin/RoomType">Room Types</a></li>
                                <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Admin/Room">Rooms</a></li>
                                <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Admin/Booking">Bookings</a></li>
                            }

                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="text-white">Hello, @email</span>
                            </li>

                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button class="btn btn-danger btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2"><a class="btn btn-success btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                            <li class="nav-item"><a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <!-- MAIN PAGE CONTENT -->
    <div class="container pt-3">
        @RenderBody()
    </div>

    <!-- MODERN FOOTER -->
    <footer class="footer-modern mt-5">
        <div class="container">
            <div class="row">

                <!-- About -->
                <div class="col-md-4">
                    <h5>Bookify</h5>
                    <p>Your trusted hotel booking partner.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <a href="/Customer/Room">Rooms</a><br />
                    <a href="/Home/Contact">Contact</a><br />
                    <a href="/Home/Privacy">Privacy Policy</a>
                </div>

                <!-- Contact & Social -->
                <div class="col-md-4">
                    <h5>Contact</h5>
                    <p>Email: support@bookify.com</p>

                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>

            </div>

            <hr style="border-color:#333;">
            <p class="text-center">© 2025 Bookify. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
