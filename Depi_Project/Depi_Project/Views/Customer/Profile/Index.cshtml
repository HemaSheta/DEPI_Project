@model Depi_Project.Models.ProfileViewModel
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    body {
        background: #0f172a !important;
        color: #e6eef8;
        font-family: "Inter", "Segoe UI", Roboto, Arial, sans-serif;
    }

    .container-custom {
        max-width: 1150px;
        margin: 0 auto;
        padding-top: 30px;
    }

    /* --- PROFILE CARD --- */
    .profile-card, .summary-card, .table-card {
        background: rgba(255,255,255,0.04);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.45);
        color: #fff;
    }

    .avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        color: #fff;
        margin-bottom: 10px;
    }

    .table {
        color: #fff;
        border-color: rgba(255,255,255,0.1);
    }

        .table th {
            background: rgba(255,255,255,0.08);
            color: #dbeafe;
            font-weight: 700;
        }

        .table td {
            background: rgba(255,255,255,0.02);
        }

    .badge {
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .badge-success {
        background: #10b981 !important;
    }

    .badge-warning {
        background: #f59e0b !important;
        color: #000 !important;
    }

    .badge-danger {
        background: #ef4444 !important;
    }

    /* Buttons */
    .btn-outline-primary {
        border-radius: 10px;
        font-weight: 700;
        padding: 6px 14px;
    }

    .btn-outline-secondary {
        border-radius: 10px;
        font-weight: 700;
        padding: 6px 14px;
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: 700;
        padding: 6px 14px;
    }

    .section-title {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 12px;
        color: #fff;
    }
</style>

<div class="container-custom">

    <!-- TOP PROFILE ROW -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="profile-card">
                <h3 class="section-title">My Profile</h3>

                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="avatar">
                            <i class="bi bi-person-fill"></i>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <p><strong>Email:</strong> @Model.Profile?.IdentityUser?.Email</p>
                        <p><strong>Phone:</strong> @Model.Profile?.Phone</p>
                        <p><strong>Name:</strong> @(Model.Profile != null ? $"{Model.Profile.FirstName} {Model.Profile.LastName}" : "—")</p>

                        <a href="/Customer/Profile/Edit" class="btn btn-outline-primary btn-sm mt-2">Edit Profile</a>
                        <a href="/Customer/Room" class="btn btn-outline-secondary btn-sm mt-2">Browse Rooms</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- SUMMARY CARD -->
        <div class="col-md-4">
            <div class="summary-card h-100">
                <h4 class="section-title">Bookings Summary</h4>
                <p><strong>Upcoming:</strong> @Model.UpcomingBookings.Count()</p>
                <p><strong>Past:</strong> @Model.PastBookings.Count()</p>
            </div>
        </div>
    </div>


    <!-- UPCOMING BOOKINGS -->
    <div class="table-card mb-4">
        <h4 class="section-title">Upcoming Bookings</h4>

        @if (!Model.UpcomingBookings.Any())
        {
            <div class="alert alert-info bg-opacity-25 text-white">No upcoming bookings.</div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Total</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.UpcomingBookings)
                    {
                        <tr>
                            <td>
                                Room @b.Room?.RoomNum
                                <div class="text-muted small">@b.Room?.RoomType?.RoomTypeName</div>
                            </td>

                            <td>@b.CheckTime.ToString("yyyy-MM-dd")</td>
                            <td>@b.CheckOutTime.ToString("yyyy-MM-dd")</td>
                            <td>@b.TotalPrice.ToString("F2")</td>

                            <td>
                                @if (b.PaymentStatus == "Paid")
                                {
                                    <span class="badge badge-success">Paid</span>
                                }
                                else if (b.PaymentStatus == "Pending")
                                {

                                    <span class="badge badge-warning">Pending</span>
                                }
                                else
                                {

                                    <span class="badge badge-danger">Not Paid</span>
                                }
                            </td>

                            <td>
                                @if (b.Status == "Approved")
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                                else if (b.Status == "Pending")
                                {

                                    <span class="badge badge-warning">Pending</span>
                                }
                                else
                                {

                                    <span class="badge badge-danger">Canceled</span>
                                }
                            </td>

                            <!-- CANCEL BUTTON ONLY — no Details button -->
                            <td>
                                <form asp-controller="Booking" asp-action="Cancel" method="post"
                                      onsubmit="return confirm('Cancel this booking?');">
                                    <input type="hidden" name="id" value="@b.BookingId" />
                                    <button class="btn btn-danger btn-sm">Cancel</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>


    <!-- PAST BOOKINGS -->
    <div class="table-card mb-5">
        <h4 class="section-title">Past Bookings</h4>

        @if (!Model.PastBookings.Any())
        {
            <div class="alert alert-secondary bg-opacity-25 text-white">No past bookings yet.</div>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Total</th>
                        <th>Payment</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.PastBookings)
                    {
                        <tr>
                            <td>
                                Room @b.Room?.RoomNum
                                <div class="text-muted small">@b.Room?.RoomType?.RoomTypeName</div>
                            </td>

                            <td>@b.CheckTime.ToString("yyyy-MM-dd")</td>
                            <td>@b.CheckOutTime.ToString("yyyy-MM-dd")</td>
                            <td>@b.TotalPrice.ToString("F2")</td>

                            <td>
                                @if (b.PaymentStatus == "Paid")
                                {
                                    <span class="badge badge-success">Paid</span>
                                }
                                else if (b.PaymentStatus == "Pending")
                                {

                                    <span class="badge badge-warning">Pending</span>
                                }
                                else
                                {

                                    <span class="badge badge-danger">Not Paid</span>
                                }
                            </td>

                            <td>
                                @if (b.Status == "Approved")
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                                else if (b.Status == "Pending")
                                {

                                    <span class="badge badge-warning">Pending</span>
                                }
                                else
                                {

                                    <span class="badge badge-danger">Canceled</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            var success = '@TempData["Success"]';
            var error = '@TempData["Error"]';
            if (success) toastr.success(success);
            if (error) toastr.error(error);
        });
    </script>
}
