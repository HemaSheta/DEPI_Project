@model Depi_Project.Models.ProfileViewModel
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4" style="max-width:1100px;">

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3">Profile</h3>

                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div style="width:110px;height:110px;border-radius:50%;background:#f1f1f1;display:flex;align-items:center;justify-content:center;font-size:48px;color:#777;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <p class="mb-1"><strong>Email:</strong> @Model.Profile?.IdentityUser?.Email</p>
                            <p class="mb-1"><strong>Phone:</strong> @Model.Profile?.Phone</p>
                            <p class="mb-1"><strong>Name:</strong> @(Model.Profile != null ? $"{Model.Profile.FirstName} {Model.Profile.LastName}" : "—")</p>

                            <div class="mt-3">
                                <a href="/Customer/Profile/Edit" class="btn btn-outline-primary btn-sm">Edit Profile</a>
                                <a href="/Customer/Room" class="btn btn-outline-secondary btn-sm">Browse Rooms</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary card -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-3">Bookings Summary</h5>
                    <p class="mb-1"><strong>Upcoming:</strong> @Model.UpcomingBookings.Count()</p>
                    <p class="mb-1"><strong>Past:</strong> @Model.PastBookings.Count()</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Bookings -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">Upcoming Bookings</h4>

            @if (!Model.UpcomingBookings.Any())
            {
                <div class="alert alert-info">You have no upcoming bookings.</div>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Room</th>
                            <th>Check-In</th>
                            <th>Check-Out</th>
                            <th>Total</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.UpcomingBookings)
                        {
                            <tr>
                                <td>
                                    @if (b.Room != null)
                                    {
                                        <div>Room @b.Room.RoomNum</div>
                                        <div class="text-muted small">@b.Room.RoomType?.RoomTypeName</div>
                                    }
                                    else
                                    {
                                        <div>Room @b.RoomId</div>
                                    }
                                </td>
                                <td>@b.CheckTime.ToString("yyyy-MM-dd")</td>
                                <td>@b.CheckOutTime.ToString("yyyy-MM-dd")</td>
                                <td>@b.TotalPrice.ToString("F2")</td>
                                <td>
                                    @if (b.PaymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (b.PaymentStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Paid</span>
                                    }
                                </td>
                                <td>
                                    @if (b.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (b.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Canceled</span>
                                    }
                                </td>
                                <td>
                                    @* Cancel button for upcoming bookings *@
                                    <form asp-controller="Booking" asp-action="Cancel" method="post" onsubmit="return confirm('Cancel this booking?');">
                                        <input type="hidden" name="id" value="@b.BookingId" />
                                        <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Past Bookings -->
    <div class="row mb-5">
        <div class="col-12">
            <h4 class="mb-3">Past Bookings</h4>

            @if (!Model.PastBookings.Any())
            {
                <div class="alert alert-secondary">No past bookings yet.</div>
            }
            else
            {
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Room</th>
                            <th>Check-In</th>
                            <th>Check-Out</th>
                            <th>Total</th>
                            <th>Payment</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.PastBookings)
                        {
                            <tr>
                                <td>
                                    @if (b.Room != null)
                                    {
                                        <div>Room @b.Room.RoomNum</div>
                                        <div class="text-muted small">@b.Room.RoomType?.RoomTypeName</div>
                                    }
                                    else
                                    {
                                        <div>Room @b.RoomId</div>
                                    }
                                </td>
                                <td>@b.CheckTime.ToString("yyyy-MM-dd")</td>
                                <td>@b.CheckOutTime.ToString("yyyy-MM-dd")</td>
                                <td>@b.TotalPrice.ToString("F2")</td>
                                <td>
                                    @if (b.PaymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (b.PaymentStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Paid</span>
                                    }
                                </td>
                                <td>
                                    @if (b.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (b.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Canceled</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            var success = '@TempData["Success"]';
            var error = '@TempData["Error"]';
            if (success) toastr.success(success);
            if (error) toastr.error(error);
        });
    </script>
}
