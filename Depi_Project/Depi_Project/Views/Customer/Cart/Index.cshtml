@model List<Depi_Project.Models.CartItem>
@{
    ViewData["Title"] = "Reservation Cart";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    body {
        background: #0f172a;
        color: #e6eef8;
        font-family: 'Inter','Segoe UI',sans-serif;
    }

    .page-wrapper {
        max-width: 1250px;
        margin: 0 auto;
        padding: 30px 20px;
        display: flex;
        gap: 25px;
        align-items: flex-start;
    }

    /* LEFT COLUMN — CART CARDS */
    .cart-items-box {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    .cart-header {
        font-size: 1.9rem;
        font-weight: 900;
        margin-bottom: 10px;
        color: white;
    }

    .cart-card {
        background: rgba(255,255,255,0.06);
        padding: 18px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(4px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.4);
        display: flex;
        gap: 18px;
        align-items: center;
    }

    .thumb-img {
        width: 130px;
        height: 90px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.15);
    }

    .card-info {
        flex: 1;
        color: #fff;
    }

        .card-info h4 {
            margin: 0;
            font-weight: 800;
            font-size: 1.2rem;
            color: #fff;
        }

        .card-info small {
            color: #c7d2fe;
        }

    .date-box {
        margin-top: 5px;
        font-size: 0.9rem;
        color: #e2e8f0;
    }

    .price-box {
        text-align: right;
        color: #38ef7d;
        font-size: 1.2rem;
        font-weight: 700;
        min-width: 120px;
    }

    .remove-btn {
        background: #dc3545;
        color: white;
        border: none;
        padding: 8px 14px;
        border-radius: 8px;
        font-weight: 700;
        margin-top: 8px;
    }

    /* RIGHT COLUMN — SUMMARY BOX */
    .summary-box {
        width: 310px;
        background: rgba(255,255,255,0.07);
        padding: 25px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(4px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.45);
        position: sticky;
        top: 90px;
        color: #fff;
    }

    .summary-title {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 12px;
    }

    .summary-total {
        font-size: 1.8rem;
        font-weight: 900;
        color: #38ef7d;
    }

    .checkout-btn {
        width: 100%;
        padding: 14px;
        margin-top: 15px;
        border-radius: 10px;
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        border: none;
        color: #fff;
        font-weight: 800;
    }

    .clear-btn {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        background: transparent;
        border: 1px solid rgba(255,255,255,0.2);
        color: #fff;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .empty-box {
        background: rgba(255,255,255,0.07);
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid rgba(255,255,255,0.12);
    }
</style>


<div class="page-wrapper">

    <!-- LEFT SIDE — CART ITEMS -->
    <div class="cart-items-box">

        <h2 class="cart-header">🛒 Reservation Cart</h2>

        @if (!Model.Any())
        {
            <div class="empty-box">
                <h5>Your cart is empty.</h5>
                <a href="/Customer/Room" class="btn btn-light mt-2">Browse Rooms</a>
            </div>
        }
        else
        {
            @foreach (var it in Model)
            {
                var nights = (it.CheckOut.Date - it.CheckIn.Date).Days;

                <div class="cart-card">

                    <img src="@it.Slide" class="thumb-img" />

                    <div class="card-info">
                        <h4>@it.RoomTitle</h4>
                        <small>Room #@it.RoomNum</small>

                        <div class="date-box">
                            @it.CheckIn.ToString("yyyy-MM-dd") → @it.CheckOut.ToString("yyyy-MM-dd")
                            <br />
                            <small>@nights night(s)</small>
                        </div>

                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="roomId" value="@it.RoomId" />
                            <input type="hidden" name="checkIn" value="@it.CheckIn.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="checkOut" value="@it.CheckOut.ToString("yyyy-MM-dd")" />
                            <button class="remove-btn">Remove</button>
                        </form>
                    </div>

                    <div class="price-box">
                        @it.TotalPrice.ToString("F2") EGP
                    </div>

                </div>
            }
        }
    </div>


    <!-- RIGHT SIDE — SUMMARY -->
    @if (Model.Any())
    {
        <div class="summary-box">
            <h3 class="summary-title">Summary</h3>

            <div class="summary-total">
                @Model.Sum(i => i.TotalPrice).ToString("F2") EGP
            </div>

            <form asp-action="Clear" method="post">
                <button class="clear-btn" type="submit">Clear Cart</button>
            </form>

            <button id="checkoutBtn" class="checkout-btn">Proceed to Checkout</button>
        </div>
    }
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $("#checkoutBtn").on("click", function () {

            let btn = $(this);
            btn.prop("disabled", true).text("Processing...");

            $.ajax({
                url: "/Customer/Payments/CheckoutFromCart",
                method: "GET",
                dataType: "json",
                success: function (res) {
                    if (res && res.url) window.location.href = res.url;
                    else {
                        toastr.error("Unexpected server response.");
                        btn.prop("disabled", false).text("Proceed to Checkout");
                    }
                },
                error: function (xhr) {
                    var msg = xhr.responseJSON?.message || xhr.responseJSON?.error || "Checkout failed.";
                    toastr.error(msg);
                    btn.prop("disabled", false).text("Proceed to Checkout");
                }
            });
        });
    </script>
}
