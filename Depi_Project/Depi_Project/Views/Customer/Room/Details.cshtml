@model Depi_Project.Models.Room
@{
    ViewData["Title"] = "Room Details";
    bool isBookedToday = ViewBag.IsBookedToday ?? false;
}

<style>
    /* Background now applies ONLY to the content area, NOT the navbar */
    .room-details-wrapper {
        min-height: 100vh;
        background: #0f172a; /* solid dark blue */
        padding-top: 40px;
        padding-bottom: 40px;
        color: #e6eef8;
    }

    .page-container {
        max-width: 1150px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .room-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 22px;
    }

    .room-title {
        font-size: 1.9rem;
        font-weight: 900;
        margin: 0;
        color: #ffffff;
    }

    .room-sub {
        color: rgba(255,255,255,0.75);
        margin-top: 6px;
        font-weight: 600;
    }

    .carousel-img {
        height: 430px;
        width: 100%;
        object-fit: cover;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.08);
        box-shadow: 0 8px 30px rgba(0,0,0,0.4);
    }

    .info-box {
        background: rgba(255,255,255,0.03);
        padding: 24px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.08);
        box-shadow: 0 6px 18px rgba(0,0,0,0.5);
        color: #e6eef8;
    }

        .info-box hr {
            border: none;
            height: 1px;
            background: rgba(255,255,255,0.08);
            margin: 12px 0;
        }

    .meta-row p {
        margin: 6px 0;
        color: rgba(255,255,255,0.9);
    }

    .status-badge {
        padding: 3px 8px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.75rem; /* smaller text */
        display: inline-block;
    }

    .status-available {
        background: #28a745;
        color: white;
    }

    .status-booked {
        background: #ffc107;
        color: #212529;
    }


    .btn-main, .btn-cart, .btn-back {
        padding: 12px 18px;
        font-size: 1rem;
        font-weight: 700;
        border-radius: 10px;
        width: 100%;
    }

    .btn-main {
        background: #3A8DFF;
        border: none;
        color: white;
    }

    .btn-cart {
        background: #17a2b8;
        color: white;
        border: none;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        border: none;
    }

    /* small responsive tweaks */
    @@media (max-width: 991.98px) {
        .carousel-img

    {
        height: 300px;
    }

    }
</style>

<body>
    <div class="room-details-wrapper">
        <div class="page-container">

            <div class="room-header">
                <div>
                    <h1 class="room-title">Room @Model.RoomNum</h1>
                    <div class="room-sub">@Model.RoomType?.RoomTypeName — <span style="font-weight:700;">@Model.RoomType?.Price EGP</span></div>
                </div>

                <!-- (removed: Booked Today / People from here as requested) -->
            </div>

            <div class="row g-4">
                <div class="col-lg-7">
                    <div id="carouselRoom" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (!string.IsNullOrWhiteSpace(Model.Slide1))
                            {
                                <div class="carousel-item active">
                                    <img src="@Model.Slide1" class="carousel-img" />
                                </div>
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Slide2))
                            {
                                <div class="carousel-item">
                                    <img src="@Model.Slide2" class="carousel-img" />
                                </div>
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Slide3))
                            {
                                <div class="carousel-item">
                                    <img src="@Model.Slide3" class="carousel-img" />
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselRoom" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselRoom" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="info-box">
                        <h4>Description</h4>
                        <p class="mb-3">@Model.Description</p>

                        <div class="meta-row mb-3">
                            <p><strong>Type:</strong> @Model.RoomType?.RoomTypeName</p>
                            <p><strong>Price:</strong> @Model.RoomType?.Price EGP</p>
                            <p><strong>People:</strong> @Model.RoomType?.NumOfPeople</p>

                            <!-- New Status line under People -->
                            <p>
                                <strong>Status:</strong>
                                @if (isBookedToday)
                                {
                                    <span class="status-badge status-booked">Booked Today</span>
                                }
                                else
                                {
                                    <span class="status-badge status-available">Available</span>
                                }
                            </p>
                        </div>

                        <hr style="border-color: rgba(255,255,255,0.04);" />

                        <!-- Date pickers -->
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label text-muted">From</label>
                                <input id="checkIn" type="date" class="form-control" />
                            </div>
                            <div class="col">
                                <label class="form-label text-muted">To</label>
                                <input id="checkOut" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mt-3 d-flex flex-column gap-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a id="bookNowBtn" href="#" class="btn btn-main">Book Now</a>
                                <a id="addCartBtn" href="#" class="btn btn-cart">Add to Cart</a>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login" class="btn btn-main">Login to Book</a>
                            }

                            <a href="/Customer/Room" class="btn btn-back">Back to Rooms</a>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- page-container -->
    </div> <!-- room-details-wrapper -->
</body>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const today = new Date().toISOString().split("T")[0];

            const ci = document.getElementById("checkIn");
            const co = document.getElementById("checkOut");

            if (ci) ci.min = today;
            if (co) co.min = today;

            function enforceDates() {
                if (!ci.value) return;

                let inDate = new Date(ci.value);
                let outDate = new Date(co.value);

                let minOut = new Date(inDate);
                minOut.setDate(minOut.getDate() + 1);
                let minOutStr = minOut.toISOString().split("T")[0];

                co.min = minOutStr;

                if (!co.value || outDate <= inDate) {
                    co.value = minOutStr;
                }
            }

            ci?.addEventListener("change", enforceDates);
            co?.addEventListener("change", enforceDates);

            const roomId = @Model.RoomId;
            const bookBtn = document.getElementById('bookNowBtn');
            const addBtn = document.getElementById('addCartBtn');

            function validDates() {
                return ci && co && ci.value && co.value && new Date(co.value) > new Date(ci.value);
            }

            bookBtn?.addEventListener('click', function (e) {
                e.preventDefault();
                if (!validDates()) return alert("Please select valid dates.");

                window.location.href =
                    `/Customer/Cart/Add/${roomId}?checkIn=${ci.value}&checkOut=${co.value}`;
            });

            addBtn?.addEventListener('click', function (e) {
                e.preventDefault();
                if (!validDates()) return alert("Please select valid dates.");

                window.location.href =
                    `/Customer/Cart/Add/${roomId}?checkIn=${ci.value}&checkOut=${co.value}&stay=true`;
            });

        });
    </script>
}
