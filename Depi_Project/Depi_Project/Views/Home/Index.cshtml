@{
    ViewData["Title"] = "Welcome to Bookify";
}

<style>
    /* Fullscreen Slideshow Container */
    .hero-slideshow {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .hero-slide {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        animation: fadeSlide 18s infinite;
    }

        .hero-slide:nth-child(1) {
            animation-delay: 0s;
        }

        .hero-slide:nth-child(2) {
            animation-delay: 6s;
        }

        .hero-slide:nth-child(3) {
            animation-delay: 12s;
        }

    @@keyframes fadeSlide {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        30% {
            opacity: 1;
        }

        40% {
            opacity: 0;
        }

        100% {
            opacity: 0;
        }
    }

    /* Dark overlay */
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: 2;
    }

    /* Centered Content */
    .hero-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 3;
        text-align: center;
        color: white;
        width: 90%;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        text-shadow: 0 4px 10px rgba(0,0,0,0.7);
        margin-bottom: 20px;
    }

    .hero-subtitle {
        font-size: 1.6rem;
        margin-bottom: 40px;
        opacity: 0.9;
    }

    /* Glassmorphic Button */
    .hero-btn {
        padding: 15px 40px;
        font-size: 20px;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.4);
        color: #fff;
        transition: all 0.3s ease;
    }

        .hero-btn:hover {
            background: rgba(255, 255, 255, 0.35);
            border-color: white;
            color: #000;
            transform: scale(1.05);
        }
</style>

<div class="hero-slideshow">

    <!-- Background Images -->
    <img src="/images/bg1.jpg" class="hero-slide" />
    <img src="/images/bg2.jpg" class="hero-slide" />
    <img src="/images/bg3.jpg" class="hero-slide" />

    <div class="hero-overlay"></div>

    <div class="hero-content">
        <h1 class="hero-title">Welcome to Bookify</h1>
        <p class="hero-subtitle">Your perfect stay is just a click away.</p>

        <a href="/Customer/Room" class="hero-btn">Go To Rooms</a>
    </div>

</div>
