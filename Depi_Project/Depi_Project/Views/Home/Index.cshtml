@{
    ViewData["Title"] = "Welcome to Bookify";
}

<style>

    /* Fullscreen slideshow between navbar and footer */
    .hero-slideshow {
        position: relative;
        width: 100%;
        height: calc(120vh - 140px); /* Navbar + footer space removed */
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    .hero-slide {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        animation: fadeSlide 18s infinite;
    }

        .hero-slide:nth-child(1) {
            animation-delay: 0s;
        }

        .hero-slide:nth-child(2) {
            animation-delay: 6s;
        }

        .hero-slide:nth-child(3) {
            animation-delay: 12s;
        }

    @@keyframes fadeSlide {
        0%, 40%, 100%

    {
        opacity: 0;
    }

    10%, 30% {
        opacity: 1;
    }

    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.55);
        z-index: 2;
    }

    .hero-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 3;
        text-align: center;
        color: white;
        width: 90%;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        text-shadow: 0 4px 10px rgba(0,0,0,0.7);
    }

    .hero-subtitle {
        font-size: 1.6rem;
        opacity: 0.9;
        margin-bottom: 40px;
    }

    .hero-btn {
        padding: 18px 55px;
        font-size: 22px;
        border-radius: 40px;
        font-weight: 600;
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.33);
        border: 1px solid rgba(255,255,255,0.75);
        color: #fff;
        transition: 0.3s;
    }

        .hero-btn:hover {
            transform: scale(1.08);
            background: rgba(255,255,255,0.55);
            color: #000;
        }

</style>

<div class="hero-slideshow">

    <!-- HD Images -->
    <img src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?auto=format&fit=crop&w=1600&q=80" class="hero-slide" />
    <img src="https://images.unsplash.com/photo-1505693416388-ac5ce068fe85?auto=format&fit=crop&w=1600&q=80" class="hero-slide" />
    <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?auto=format&fit=crop&w=1600&q=80" class="hero-slide" />

    <div class="hero-overlay"></div>

    <div class="hero-content">
        <h1 class="hero-title">Welcome to Bookify</h1>
        <p class="hero-subtitle">Your perfect stay starts here.</p>

        <a href="/Customer/Room" class="hero-btn">Browse Rooms →</a>
    </div>

</div>
