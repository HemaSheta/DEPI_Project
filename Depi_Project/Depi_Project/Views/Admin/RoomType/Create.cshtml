@model Depi_Project.Models.RoomType

@{
    ViewData["Title"] = "Create Room Type";
}

<div class="container mt-4" style="max-width: 700px;">

    <h2 class="mb-4 text-center fw-bold" style="font-size: 2rem;">Create Room Type</h2>

    <div class="card shadow-sm p-4">

        <form asp-action="Create" method="post">

            <div class="form-group mb-3">
                <label class="fw-semibold">Room Type Name</label>
                <input asp-for="RoomTypeName" class="form-control" />
                <span asp-validation-for="RoomTypeName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-semibold">Price (EGP)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-semibold">Number of People</label>
                <input asp-for="NumOfPeople" class="form-control" />
                <span asp-validation-for="NumOfPeople" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/Admin/RoomType" class="btn btn-secondary px-4">Cancel</a>
                <button class="btn btn-success px-4" type="submit">Create</button>
            </div>

        </form>

    </div>

</div>
