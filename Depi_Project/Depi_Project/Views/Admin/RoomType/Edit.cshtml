@model Depi_Project.Models.RoomType

@{
    ViewData["Title"] = "Edit Room Type";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    body {
        background: #0f172a !important;
        color: #e6eef8;
        font-family: 'Inter', 'Segoe UI', Roboto, Arial, sans-serif;
        margin: 0;
    }

    .page-wrapper {
        max-width: 900px;
        margin: 36px auto;
        padding: 0 18px;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        text-align: center;
        color: #fff;
        margin-bottom: 18px;
    }

    .card-panel {
        background: rgba(255,255,255,0.03);
        padding: 20px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 8px 30px rgba(0,0,0,0.45);
    }

    .form-label {
        color: #dbeafe;
        font-weight: 700;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        background: rgba(255,255,255,0.95);
        color: #0b1220;
        border: 1px solid #e6eef8;
    }

    .btn-save {
        background: linear-gradient(90deg,#F59E0B,#F97316);
        border: none;
        padding: 10px 16px;
        font-weight: 900;
        color: #111;
        border-radius: 10px;
    }

    .btn-cancel {
        border-radius: 10px;
        padding: 10px 16px;
        font-weight: 700;
    }

    .validation-summary-errors {
        background: rgba(255,0,0,0.06);
        border: 1px solid rgba(255,0,0,0.12);
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 12px;
        color: #ffdede;
    }

    .field-validation-error {
        color: #ffdede;
        margin-top: 6px;
    }
</style>

<div class="page-wrapper">
    <h2 class="page-title">Edit Room Type</h2>

    <div class="card-panel">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <form asp-action="Edit" asp-route-id="@Model.RoomTypeId" method="post">
            <input type="hidden" asp-for="RoomTypeId" />

            <div class="mb-3">
                <label class="form-label">Room Type Name</label>
                <input asp-for="RoomTypeName" class="form-control" />
                <span asp-validation-for="RoomTypeName" class="field-validation-error"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="field-validation-error"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Number of People</label>
                <input asp-for="NumOfPeople" class="form-control" />
                <span asp-validation-for="NumOfPeople" class="field-validation-error"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a href="/Admin/RoomType" class="btn btn-secondary btn-cancel">Cancel</a>
                <button class="btn btn-save" type="submit">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
