@model Depi_Project.Models.RoomType

@{
    ViewData["Title"] = "Edit Room Type";
}

<h2>Edit Room Type</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoomTypeId" />

    <div class="form-group">
        <label>Room Type Name</label>
        <input asp-for="RoomTypeName" class="form-control" />
        <span asp-validation-for="RoomTypeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Number of People</label>
        <input asp-for="NumOfPeople" class="form-control" />
        <span asp-validation-for="NumOfPeople" class="text-danger"></span>
    </div>

    <button class="btn btn-warning mt-3" type="submit">Save Changes</button>
    <a href="/Admin/RoomType" class="btn btn-secondary mt-3">Cancel</a>
</form>
