@model IEnumerable<Depi_Project.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}

<div class="container mt-4" style="max-width: 1100px;">

    <h2 class="mb-4 text-center fw-bold" style="font-size: 2rem;">Room Types</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" href="/Admin/RoomType/Create">+ Add New Room Type</a>
    </div>

    <div class="card shadow-sm p-3">

        <table class="table table-hover table-bordered mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price (EGP)</th>
                    <th>People</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.RoomTypeName</td>
                        <td>@t.Description</td>
                        <td>@t.Price</td>
                        <td>@t.NumOfPeople</td>

                        <td>
                            <a href="/Admin/RoomType/Edit/@t.RoomTypeId"
                               class="btn btn-warning btn-sm me-1">Edit</a>

                            <a href="/Admin/RoomType/Delete/@t.RoomTypeId"
                               class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
