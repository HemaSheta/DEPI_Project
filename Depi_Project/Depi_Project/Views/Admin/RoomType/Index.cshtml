@model IEnumerable<Depi_Project.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}

<style>
    /* Page background consistent with other pages */
    body {
        background: #0f172a !important;
        color: #e6eef8;
        font-family: 'Inter', 'Segoe UI', Roboto, Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .admin-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 18px;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
    }

    .page-title {
        font-size: 1.6rem;
        font-weight: 900;
        color: #ffffff;
    }

    .card-panel {
        background: rgba(255,255,255,0.03);
        padding: 18px;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.45);
        border: 1px solid rgba(255,255,255,0.06);
    }

    .admin-table {
        background: transparent;
        border-radius: 12px;
        overflow: hidden;
    }

    table.table {
        background: rgba(255,255,255,0.02);
        color: #e6eef8;
    }

        table.table thead.table-dark th {
            background: rgba(255,255,255,0.06);
            color: #fff;
            border-bottom: 1px solid rgba(255,255,255,0.04);
        }

        table.table tbody tr td {
            vertical-align: middle;
            border-color: rgba(255,255,255,0.04);
        }

    .muted-small {
        color: rgba(226,232,240,0.6);
        font-size: .9rem;
    }

    .btn-small {
        padding: 8px 12px;
        font-size: .9rem;
        border-radius: 10px;
        font-weight: 700;
    }

    .btn-create {
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        color: white;
        border: none;
        padding: 10px 14px;
        border-radius: 10px;
        font-weight: 900;
    }

        .btn-create:hover {
            box-shadow: 0 10px 26px rgba(58,141,255,0.18);
            transform: translateY(-2px);
        }

    .btn-edit {
        background: #f59e0b;
        border: none;
        color: #111;
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 800;
    }

        .btn-edit:hover {
            filter: brightness(.95);
        }

    .btn-delete {
        background: #ef4444;
        border: none;
        color: #fff;
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 800;
    }

        .btn-delete:hover {
            filter: brightness(.95);
        }

    /* Responsive tweaks */
    @@media (max-width: 767.98px) {
        .header-row

    {
        flex-direction: column;
        gap: 12px;
        align-items: stretch;
    }

    .page-title {
        text-align: center;
    }

    .card-panel {
        padding: 12px;
    }

    table.table thead.table-dark th {
        font-size: .95rem;
    }

    }
</style>

<div class="admin-container">
    <div class="header-row">
        <div class="page-title">Room Types</div>
        <div>
            <a class="btn btn-create" href="/Admin/RoomType/Create">+ Add New Room Type</a>
        </div>
    </div>

    <div class="card-panel">
        <div class="admin-table">
            <table class="table table-hover table-bordered mb-0 align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th class="text-start">Name</th>
                        <th>Price (EGP)</th>
                        <th>People</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="text-start">
                                <div style="font-weight:800; color:#fff;">@t.RoomTypeName</div>
                                <div class="muted-small">ID: @t.RoomTypeId</div>
                            </td>

                            <td>
                                <span style="font-weight:800;">@t.Price</span>
                            </td>

                            <td>
                                <span class="muted-small">@t.NumOfPeople</span>
                            </td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="/Admin/RoomType/Edit/@t.RoomTypeId" class="btn-edit btn-small">Edit</a>
                                    <a href="/Admin/RoomType/Delete/@t.RoomTypeId" class="btn-delete btn-small">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
