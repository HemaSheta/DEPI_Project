@model IEnumerable<Depi_Project.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}

<style>
    /* PAGE BACKGROUND (same style as other admin pages) */
    body {
        background: #0f172a !important;
        color: #e6eef8 !important;
        font-family: 'Inter', 'Segoe UI', Roboto, Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .admin-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 18px;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 900;
        color: #ffffff;
    }

    /* PANEL BOX */
    .card-panel {
        background: rgba(255,255,255,0.03);
        padding: 18px;
        border-radius: 14px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.5);
        border: 1px solid rgba(255,255,255,0.06);
    }

    /* TABLE */
    .admin-table table {
        width: 100%;
        border-radius: 14px;
        overflow: hidden;
        color: #fff !important;
    }

    thead.table-dark th {
        background: rgba(255,255,255,0.08) !important;
        color: #fff !important;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        font-weight: 800;
    }

    tbody tr td {
        background: rgba(255,255,255,0.02);
        border-color: rgba(255,255,255,0.06);
        vertical-align: middle;
        padding: 12px 10px;
        color: #e6eef8 !important;
    }

    /* Row hover effect */
    tbody tr:hover td {
        background: rgba(255,255,255,0.08);
        transition: 0.2s ease-in-out;
    }

    /* Muted small text */
    .muted-small {
        color: rgba(226,232,240,0.7) !important;
        font-size: .85rem;
    }

    /* BUTTON STYLES */
    .btn-create {
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        color: white;
        border: none;
        padding: 10px 16px;
        border-radius: 12px;
        font-weight: 900;
        transition: all 0.2s ease-in-out;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 26px rgba(58,141,255,0.25);
        }

    .btn-small {
        padding: 8px 12px;
        border-radius: 10px;
        font-weight: 800;
        font-size: .9rem;
        transition: 0.2s ease-in-out;
    }

    .btn-edit {
        background: #f59e0b;
        border: none;
        color: #111;
    }

        .btn-edit:hover {
            filter: brightness(.92);
            transform: translateY(-1px);
        }

    .btn-delete {
        background: #ef4444;
        border: none;
        color: #fff;
    }

        .btn-delete:hover {
            filter: brightness(.92);
            transform: translateY(-1px);
        }

    /* RESPONSIVE */
    @@media (max-width: 767px) {
        .header-row {
            flex-direction: column;
            gap: 12px;
            align-items: flex-start;
        }

        .page-title {
            text-align: left;
        }

        .btn-create {
            width: 100%;
            text-align: center;
        }
    }
</style>

<div class="admin-container">

    <div class="header-row">
        <div class="page-title">Room Types</div>
        <a class="btn btn-create" href="/Admin/RoomType/Create">+ Add New Room Type</a>
    </div>

    <div class="card-panel">
        <div class="admin-table">
            <table class="table table-hover table-bordered mb-0 align-middle text-center">

                <thead class="table-dark">
                    <tr>
                        <th class="text-start">Name</th>
                        <th>Price (EGP)</th>
                        <th>People</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="text-start">
                                <div style="font-weight:800; color:#fff;">@t.RoomTypeName</div>
                                <div class="muted-small">ID: @t.RoomTypeId</div>
                            </td>

                            <td style="font-weight:700;">@t.Price</td>

                            <td>
                                <span class="muted-small">@t.NumOfPeople</span>
                            </td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="/Admin/RoomType/Edit/@t.RoomTypeId" class="btn-edit btn-small">Edit</a>
                                    <a href="/Admin/RoomType/Delete/@t.RoomTypeId" class="btn-delete btn-small">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
