@model Depi_Project.Models.RoomType

@{
    ViewData["Title"] = "Delete Room Type";
}

<h2>Are you sure you want to delete this Room Type?</h2>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.RoomTypeName</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>People:</strong> @Model.NumOfPeople</p>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="RoomTypeId" />

    <button class="btn btn-danger" type="submit">Yes, Delete</button>
    <a href="/Admin/RoomType" class="btn btn-secondary">Cancel</a>
</form>
