@model IEnumerable<Depi_Project.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<style>
    /* ---- DARK BACKGROUND ---- */
    body {
        background: #0f172a !important;
        color: #e6eef8;
        font-family: 'Inter','Segoe UI',Roboto,Arial,sans-serif;
        margin: 0;
        padding: 0;
    }

    /* ---- PAGE CONTAINER ---- */
    .admin-container {
        max-width: 1150px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 22px;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        color: #fff;
    }

    /* ---- PANEL (GLASS EFFECT) ---- */
    .card-panel {
        background: rgba(255,255,255,0.05);
        padding: 20px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.06);
        backdrop-filter: blur(6px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.45);
    }

    /* ---- TABLE ---- */
    .admin-table {
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.25);
    }

    table {
        color: #f1f5f9;
    }

    thead.table-dark {
        background: #1e293b !important;
    }

    thead th {
        color: #fff !important;
        font-weight: 700;
        font-size: 1rem;
    }

    tbody td {
        background: rgba(255,255,255,0.02);
        border-color: rgba(255,255,255,0.08);
        color: #f1f5f9 !important;
    }

    /* Force all table text white */
    .table td,
    .table th,
    .table tbody tr td,
    .table-hover tbody tr:hover td {
        color: #f1f5f9 !important;
    }

    .text-start,
    .text-center {
        color: #f1f5f9 !important;
    }

    .muted-small {
        color: #cbd5e1 !important;
        font-size: .9rem;
    }

    /* ---- THUMBNAILS ---- */
    .thumb-gallery {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .thumb-img {
        width: 110px;
        height: 75px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.15);
        box-shadow: 0 3px 8px rgba(0,0,0,0.4);
    }

    .thumb-placeholder {
        width: 110px;
        height: 75px;
        border-radius: 10px;
        background: rgba(255,255,255,0.07);
        border: 1px dashed rgba(255,255,255,0.25);
        color: #94a3b8;
        font-size: .8rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .room-num {
        font-size: 1rem;
        font-weight: 800;
        color: #fff;
    }

    /* ---- BUTTONS ---- */
    .btn-primary {
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        border: none;
        font-weight: 700;
        padding: 10px 18px;
        border-radius: 10px;
    }

    .btn-warning.btn-small {
        border-radius: 8px;
        padding: 6px 12px;
        background: #fbbf24;
        border: none;
        font-weight: 700;
        color: #111;
    }

    .btn-danger.btn-small {
        border-radius: 8px;
        padding: 6px 12px;
        background: #dc2626;
        border: none;
        font-weight: 700;
        color: white;
    }
</style>

<div class="admin-container">
    <div class="header-row">
        <div class="page-title">Rooms</div>
        <a class="btn btn-primary" href="/Admin/Room/Create">+ Add New Room</a>
    </div>

    <div class="card-panel">
        <div class="admin-table">
            <table class="table table-hover table-bordered mb-0 align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Room #</th>
                        <th>Description</th>
                        <th>Room Type</th>
                        <th>Price (EGP)</th>
                        <th>Preview</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>
                                <div class="room-num">#@room.RoomNum</div>
                                <div class="muted-small">ID: @room.RoomId</div>
                            </td>

                            <td class="text-start" style="max-width:330px;">
                                <div style="max-height:60px; overflow:hidden; text-overflow:ellipsis;">
                                    @room.Description
                                </div>
                            </td>

                            <td>
                                <div>@room.RoomType?.RoomTypeName</div>
                                <div class="muted-small">People: @room.RoomType?.NumOfPeople</div>
                            </td>

                            <td>@room.RoomType?.Price</td>

                            <td class="text-center">
                                <div class="thumb-gallery">
                                    @if (!string.IsNullOrWhiteSpace(room.Slide1))
                                    {
                                        <img src="@room.Slide1" class="thumb-img" />
                                    }
                                    else
                                    {
                                        <div class="thumb-placeholder">No Image</div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(room.Slide2))
                                    {
                                        <img src="@room.Slide2" class="thumb-img" />
                                    }
                                    else
                                    {
                                        <div class="thumb-placeholder">No Image</div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(room.Slide3))
                                    {
                                        <img src="@room.Slide3" class="thumb-img" />
                                    }
                                    else
                                    {
                                        <div class="thumb-placeholder">No Image</div>
                                    }
                                </div>
                            </td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="/Admin/Room/Edit/@room.RoomId" class="btn btn-warning btn-small">Edit</a>
                                    <a href="/Admin/Room/Delete/@room.RoomId" class="btn btn-danger btn-small">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
