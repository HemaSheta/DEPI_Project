@model Depi_Project.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4" style="max-width: 900px;">
    <h2 class="mb-4 text-center fw-bold" style="font-size: 2rem;">Delete Room</h2>

    <div class="card shadow-sm p-4 mb-4">
        <p><strong>Room Number:</strong> @Model.RoomNum</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <div class="row text-center mt-3">
            <div class="col">
                <img src="@Model.Slide1" width="160" class="rounded shadow-sm" />
            </div>
            <div class="col">
                <img src="@Model.Slide2" width="160" class="rounded shadow-sm" />
            </div>
            <div class="col">
                <img src="@Model.Slide3" width="160" class="rounded shadow-sm" />
            </div>
        </div>
    </div>

    <!-- FIXED: Correct Route -->
    <form method="post"
          asp-controller="Room"
          asp-action="Delete"
          asp-route-area="Admin"
          asp-route-id="@Model.RoomId">

        <input type="hidden" asp-for="RoomId" />

        <div class="d-flex justify-content-between">
            <a href="/Admin/Room" class="btn btn-secondary px-4">Cancel</a>
            <button class="btn btn-danger px-4" type="submit">Yes, Delete</button>
        </div>

    </form>
</div>
