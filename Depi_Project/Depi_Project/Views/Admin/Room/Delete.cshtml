@model Depi_Project.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2>Are you sure you want to delete this Room?</h2>

<div class="card p-3 mb-3">
    <p><strong>Room Number:</strong> @Model.RoomNum</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Description:</strong> @Model.Description</p>

    <div class="row">
        <div class="col">
            <img src="@Model.Slide1" width="150" />
        </div>
        <div class="col">
            <img src="@Model.Slide2" width="150" />
        </div>
        <div class="col">
            <img src="@Model.Slide3" width="150" />
        </div>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="RoomId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Admin/Room" class="btn btn-secondary">Cancel</a>
</form>
