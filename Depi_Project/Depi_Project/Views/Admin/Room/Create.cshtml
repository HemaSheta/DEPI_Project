@model Depi_Project.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-4" style="max-width: 900px;">
    <h2 class="mb-4 text-center fw-bold" style="font-size: 2rem;">Create Room</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Room Number</label>
                    <input asp-for="RoomNum" class="form-control" />
                    <span asp-validation-for="RoomNum" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option>Available</option>
                        <option>Booked</option>
                        <option>Full</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Room Type</label>
                <select asp-for="RoomTypeId" class="form-control">
                    @foreach (var type in ViewBag.RoomTypes)
                    {
                        <option value="@type.RoomTypeId">@type.RoomTypeName</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-semibold">Slide 1 (required)</label>
                    <input type="file" name="Slide1File" class="form-control" required />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label fw-semibold">Slide 2 (optional)</label>
                    <input type="file" name="Slide2File" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label fw-semibold">Slide 3 (optional)</label>
                    <input type="file" name="Slide3File" class="form-control" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/Admin/Room" class="btn btn-secondary px-4">Cancel</a>
                <button class="btn btn-success px-4" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
