@model Depi_Project.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    /* PAGE BACKGROUND */
    body {
        background: #0f172a !important;
        font-family: 'Inter','Segoe UI',sans-serif;
        color: #e6eef8;
        margin: 0;
    }

    .page-wrapper {
        max-width: 950px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* PAGE TITLE */
    .page-title {
        font-size: 2.2rem;
        font-weight: 900;
        text-align: center;
        color: #fff;
        margin-bottom: 18px;
    }

    /* CARD STYLING (glass effect) */
    .form-card {
        background: rgba(255,255,255,0.03);
        padding: 24px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 8px 30px rgba(0,0,0,0.45);
        backdrop-filter: blur(6px);
        color: #e6eef8;
    }

    /* LABEL + INPUT STYLING */
    .form-label {
        font-weight: 600;
        color: #dbeafe;
        display: block;
        margin-bottom: 6px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 12px;
        background: rgba(255,255,255,0.95);
        color: #0f172a;
        border: 1px solid #e2e8f0;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3A8DFF;
            box-shadow: 0 0 8px rgba(58,141,255,0.6);
            outline: none;
        }

    /* BUTTONS */
    .btn-create {
        background: linear-gradient(90deg,#3A8DFF,#6CC3FF);
        border: none;
        line-height: 1.5;
        padding: 12px 26px;
        font-weight: 800;
        border-radius: 10px;
        color: white;
    }

        .btn-create:hover {
            opacity: .95;
            transform: translateY(-2px);
        }

    .btn-cancel {
        border-radius: 10px;
        padding: 12px 26px;
        font-weight: 700;
        color: #0f172a;
        background: rgba(255,255,255,0.9);
        border: 1px solid rgba(255,255,255,0.06);
    }

    .validation-summary-errors {
        background: rgba(255,0,0,0.04);
        border: 1px solid rgba(255,0,0,0.12);
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 12px;
        color: #ffdede;
    }

    .field-validation-error {
        color: #ffdede;
        margin-top: 6px;
        display: block;
    }

    .note-muted {
        font-size: 0.92rem;
        color: rgba(230,238,248,0.75);
    }
</style>

<div class="page-wrapper">
    <h2 class="page-title">Create Room</h2>

    <div class="form-card">
        <!-- Validation summary (shows ModelState errors including controller-level uniqueness checks) -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- ROOM NUMBER -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Room Number</label>
                    <input asp-for="RoomNum" class="form-control" />
                    <span asp-validation-for="RoomNum" class="field-validation-error"></span>
                </div>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <!-- ROOM TYPE -->
            <div class="mb-3">
                <label class="form-label">Room Type</label>
                <select asp-for="RoomTypeId" class="form-select">
                    @foreach (var type in ViewBag.RoomTypes)
                    {
                        <option value="@type.RoomTypeId">@type.RoomTypeName</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="field-validation-error"></span>
            </div>

            <!-- IMAGE UPLOADS -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Slide 1 (required)</label>
                    <input type="file" name="Slide1File" class="form-control" required />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Slide 2 (optional)</label>
                    <input type="file" name="Slide2File" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Slide 3 (optional)</label>
                    <input type="file" name="Slide3File" class="form-control" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/Admin/Room" class="btn btn-cancel">Cancel</a>
                <button class="btn btn-create" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
