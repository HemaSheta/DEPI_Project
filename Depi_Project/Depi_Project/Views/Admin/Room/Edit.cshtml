@model Depi_Project.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    /* Page background (same dark theme used in other admin pages) */
    body {
        background: #0f172a !important;
        font-family: 'Inter','Segoe UI',sans-serif;
        color: #e6eef8;
        margin: 0;
    }

    .page-wrapper {
        max-width: 950px;
        margin: 36px auto;
        padding: 0 20px;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        text-align: center;
        color: #ffffff;
        margin-bottom: 18px;
    }

    .form-card {
        background: rgba(255,255,255,0.03);
        padding: 24px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 8px 30px rgba(0,0,0,0.45);
        backdrop-filter: blur(6px);
        color: #e6eef8;
    }

    .form-label {
        font-weight: 700;
        color: #e6eef8;
        display: block;
        margin-bottom: 6px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 12px;
        background: rgba(255,255,255,0.95);
        color: #0f172a;
        border: 1px solid #e6eef8;
    }

    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: #3A8DFF;
        box-shadow: 0 6px 18px rgba(58,141,255,0.18);
    }

    .img-preview {
        width: 100%;
        max-width: 220px;
        height: auto;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 6px 18px rgba(0,0,0,0.45);
    }

    .small-note {
        font-size: 0.9rem;
        color: rgba(230,238,248,0.8);
    }

    .btn-cancel {
        border-radius: 10px;
        padding: 10px 22px;
        font-weight: 700;
        color: #0f172a;
        background: rgba(255,255,255,0.9);
        border: 1px solid rgba(255,255,255,0.06);
    }

    .btn-save {
        border-radius: 10px;
        padding: 10px 22px;
        font-weight: 800;
        color: #111;
        background: linear-gradient(90deg,#F59E0B,#F97316); /* warning/orange */
        border: none;
    }

    .validation-summary-errors {
        background: rgba(255,0,0,0.04);
        border: 1px solid rgba(255,0,0,0.12);
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 12px;
        color: #ffdede;
    }

    .field-validation-error {
        color: #ffdede;
        margin-top: 6px;
        display: block;
    }

    .row-gap { gap: 18px; }

    .note-muted { color: rgba(230,238,248,0.7); font-size:0.95rem; }
</style>

<div class="page-wrapper">
    <h2 class="page-title">Edit Room</h2>

    <div class="form-card">
        <!-- shows ModelState errors including uniqueness error set by controller -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- FIXED: Correct Route -->
        <form method="post"
              asp-controller="Room"
              asp-action="Edit"
              asp-route-area="Admin"
              asp-route-id="@Model.RoomId"
              enctype="multipart/form-data">

            <input type="hidden" asp-for="RoomId" />

            <div class="row row-gap">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Room Number</label>
                    <input asp-for="RoomNum" class="form-control" />
                    <span asp-validation-for="RoomNum" class="field-validation-error"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Room Type</label>
                <select asp-for="RoomTypeId" class="form-select">
                    @foreach (var type in ViewBag.RoomTypes)
                    {
                        <option value="@type.RoomTypeId" selected="@(type.RoomTypeId == Model.RoomTypeId)">
                            @type.RoomTypeName
                        </option>
                    }
                </select>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label">Current Slide 1</label><br />
                    @if (!string.IsNullOrWhiteSpace(Model.Slide1))
                    {
                        <img src="@Model.Slide1" alt="Slide1" class="img-preview mb-2" />
                    }
                    else
                    {
                        <div class="img-preview" style="display:flex;align-items:center;justify-content:center;color:#94a3b8;">
                            No image
                        </div>
                    }
                    <input type="file" name="Slide1File" class="form-control" />
                    <div class="note-muted mt-1">Recommended size: 1200×800</div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Current Slide 2</label><br />
                    @if (!string.IsNullOrWhiteSpace(Model.Slide2))
                    {
                        <img src="@Model.Slide2" alt="Slide2" class="img-preview mb-2" />
                    }
                    else
                    {
                        <div class="img-preview" style="display:flex;align-items:center;justify-content:center;color:#94a3b8;">
                            No image
                        </div>
                    }
                    <input type="file" name="Slide2File" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Current Slide 3</label><br />
                    @if (!string.IsNullOrWhiteSpace(Model.Slide3))
                    {
                        <img src="@Model.Slide3" alt="Slide3" class="img-preview mb-2" />
                    }
                    else
                    {
                        <div class="img-preview" style="display:flex;align-items:center;justify-content:center;color:#94a3b8;">
                            No image
                        </div>
                    }
                    <input type="file" name="Slide3File" class="form-control" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/Admin/Room" class="btn btn-cancel">Cancel</a>
                <button class="btn btn-save" type="submit">Save Changes</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
