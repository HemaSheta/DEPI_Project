@model Depi_Project.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div class="card p-3 mb-3">
    <p><strong>Booking ID:</strong> @Model.BookingId</p>
    <p><strong>Room ID:</strong> @Model.RoomId</p>
    <p><strong>User:</strong> @Model.IdentityUserId</p>
    <p><strong>Check In:</strong> @Model.CheckTime.ToString("yyyy-MM-dd")</p>
    <p><strong>Check Out:</strong> @Model.CheckOutTime.ToString("yyyy-MM-dd")</p>
    <p><strong>Total Price:</strong> @Model.TotalPrice</p>
    <p><strong>Status:</strong> @Model.PaymentStatus</p>
</div>

<a href="/Admin/Booking" class="btn btn-secondary">Back</a>
